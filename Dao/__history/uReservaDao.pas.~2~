unit uReservaDao;

interface

uses
  FireDAC.Comp.Client, uConexao, uReservaModel, System.SysUtils;

type
  TReservaDao = class

  private
    FConexao: TConexao;

  public
    constructor Create;

    function Incluir(ReservaModel: TReservaModel): Boolean;
    function Alterar(ReservaModel: TReservaModel): Boolean;
    function Excluir(ReservaModel: TReservaModel): Boolean;

    function Obter: TFDQuery;
    function ObterSelecionadas(ReservaModel: TReservaModel): TFDQuery;
  end;

implementation

{ TReservaDao }

uses uSistemaControl;

constructor TReservaDao.Create;
begin
  FConexao := TSistemaControl.GetInstance().Conexao;
end;

function TReservaDao.Alterar(ReservaModel: TReservaModel): Boolean;
var
  VQry: TFDQuery;
begin
  VQry := FConexao.CriarQuery();
  try
    VQry.ExecSQL('UPDATE Reserva SET Fim = :fim WHERE (Id_Usuario = :idUsuario AND Id_Livro = :idLivro)', [ReservaModel.F, ReservaModel.Autor, ReservaModel.Ano, ReservaModel.Localizacao, ReservaModel.Codigo]);
    Result := True;
  finally
    VQry.Free;
  end;
end;

function TReservaDao.Excluir(ReservaModel: TReservaModel): Boolean;
var
  VQry: TFDQuery;
begin
  VQry := FConexao.CriarQuery();
  try
    VQry.ExecSQL('DELETE FROM Livro WHERE (Codigo = :codigo)', [ReservaModel.Codigo]);

    Result := True;
  finally
    VQry.Free;
  end;
end;

function TReservaDao.Incluir(ReservaModel: TReservaModel): Boolean;
var
  VQry: TFDQuery;
begin
  VQry := FConexao.CriarQuery();
  try
    VQry.ExecSQL('INSERT INTO Livro VALUES (:codigo, :titulo, :autor, :ano, :localizacao)', [ReservaModel.Codigo, ReservaModel.Titulo, ReservaModel.Autor, ReservaModel.Ano, ReservaModel.Localizacao]);

    Result := True;
  finally
    VQry.Free;
  end;
end;

function TReservaDao.Obter: TFDQuery;
var
  VQry: TFDQuery;
begin
  VQry := FConexao.CriarQuery();

  VQry.Open(' SELECT * FROM Livro order by 1 ');

  Result := VQry;
end;

function TReservaDao.ObterSelecionadas(ReservaModel: TReservaModel): TFDQuery;
var
  VQry: TFDQuery;
begin
  VQry := FConexao.CriarQuery();

  VQry.Open(' SELECT * FROM Livro WHERE Codigo = :codigo ', [ReservaModel.Codigo]);

  Result := VQry;
end;

end.
